            <corners android:radius="5dp" />
            <solid android:color="#444444" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />
                <solid android:color="#AAAAAA" />
            </shape>
