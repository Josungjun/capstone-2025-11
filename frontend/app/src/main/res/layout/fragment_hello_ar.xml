<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top" />

    <TextView
        android:id="@+id/poseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pathStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:background="@android:color/darker_gray"
        android:padding="8dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/surface_status_container"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:padding="12dp"
        android:background="@drawable/bg_surface_hint"
        android:visibility="gone">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_scan"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/surface_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Searching for surfaces..."
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:translationX="15dp"
            android:translationY="1.5dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/direction_ui"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_gravity="bottom"
        android:gravity="center">

        <!-- 회전 원 -->
        <ImageView
            android:id="@+id/rotation_circle"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/outer_circle" />

        <!-- 노란 점 -->
        <ImageView
            android:id="@+id/yellow_dot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/yellow_dot" />

    </FrameLayout>

