<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="?attr/colorSurface">

    <!-- 배경 이미지 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <!-- 검색창 컨테이너 -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:strokeWidth="1dp"
        app:strokeColor="?attr/colorOutline"
        app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
        android:layout_gravity="top|center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <!-- 메뉴 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/menuButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:backgroundTint="?attr/colorSurfaceContainerHighest"
                app:icon="@android:drawable/ic_menu_sort_by_size"
                app:iconTint="?attr/colorOnSurface"
                app:rippleColor="?attr/colorPrimary"
                android:contentDescription="메뉴 열기"/>

            <!-- 검색창 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="장소를 검색하세요"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="?attr/colorSurfaceContainerLow"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.SmallComponent"
                app:hintTextColor="?attr/colorPrimary">

                <AutoCompleteTextView
                    android:id="@+id/searchBar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16sp"
                    android:textColorHint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnSurface"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 음성 검색 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/voiceSearchButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:backgroundTint="?attr/colorSurfaceContainerHighest"
                app:icon="@android:drawable/ic_btn_speak_now"
                app:iconTint="?attr/colorOnSurface"
                app:rippleColor="?attr/colorPrimary"
                android:contentDescription="음성 검색"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>
